apiVersion: v1
kind: Service
metadata:
  name: service-{{ service }}
  labels:
    app: service-{{ service }}
    component: service
    version: "{{ versions }}"
spec:
  ports:
  - name: http
    port: 8080
  selector:
    app: service-{{ service }}
    component: service
    version: "{{ versions }}"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: service-{{ service }}
  labels:
    app: service-{{ service }}
    component: service
    version: "{{ versions }}"
spec:
  replicas: {{ replicas }}
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: service-{{ service }}
      component: service
      version: "{{ versions }}"
  template:
    metadata:
      labels:
        app: service-{{ service }}
        component: service
        version: "{{ versions }}"
      annotations:
        sidecar.istio.io/inject: "true"
    spec:
      containers:
      - name: service-{{ service }}
        image: registry.hub.docker.com/garystafford/go-srv-{{ service }}:{{ versions }}
        # resources:
        # requests:
        #   memory: 100M
        #   cpu: 100m
        # limits:
        #   memory: 250M
        #   cpu: 250m
        env:
        - name: MONGO_CONN
          valueFrom:
            secretKeyRef:
              name: go-srv-config
              key: mongodb.conn
        - name: RABBITMQ_CONN
          valueFrom:
            secretKeyRef:
              name: go-srv-config
              key: rabbitmq.conn
        - name: SERVICE_A_URL
          value: http://service-a.dev.svc.cluster.local:8080
        - name: SERVICE_B_URL
          value: http://service-b.dev.svc.cluster.local:8080
        - name: SERVICE_C_URL
          value: http://service-c.dev.svc.cluster.local:8080
        - name: SERVICE_D_URL
          value: http://service-d.dev.svc.cluster.local:8080
        - name: SERVICE_E_URL
          value: http://service-e.dev.svc.cluster.local:8080
        - name: SERVICE_F_URL
          value: http://service-f.dev.svc.cluster.local:8080
        - name: SERVICE_G_URL
          value: http://service-g.dev.svc.cluster.local:8080
        - name: SERVICE_H_URL
          value: http://service-h.dev.svc.cluster.local:8080
        ports:
        - containerPort: 8080
        imagePullPolicy: Always
